[% BLOCK format_css_link %]
  [% IF style_url.match('/IE-fixes\.css') %]
    <!--[if lte IE 7]>
      [%# Internet Explorer treats [if IE] HTML comments as uncommented.
        # We use it to import CSS fixes so that Bugzilla looks decent on IE 7
        # and below.
        #%]
  [% END %]

